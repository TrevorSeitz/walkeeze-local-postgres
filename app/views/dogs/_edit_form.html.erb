
<%= form_for :dog, url: (@dog.new_record? ? create_dog_path : update_dog_path(@dog.id)), :html => {class: "edit_dog"} do |f| %>


  <div class="edit_dog_form">
    Name: <%= f.text_field :name %><br>
    Breed: <%= f.text_field :breed %><br>
    Age: <%= f.number_field :age %><br>
    Notes: <br><%= f.text_area :notes , cols: "30", rows: "10" %><br><br>

    <%= f.submit %>
  </div>
<% end %>

<div class="column">

  <div class="shadowbox" >

    <%= render partial: 'form', locals: { walk: @walk } %><br><br>
    <%= render partial: 'show_dogs', locals: { walk: @walk } %><br><br><br><br>

  </div>
  <div id="buttons">
  <% if @user.walker === true %>
      <p><%= button_to "Delete Your Booking", delete_walk_path(@walk), {method: :delete} %></p>
  <% else %>
    <p><%= button_to "Edit Your Booking", edit_walk_path(@walk), {method: :get} %></p>
  <% end %>
  <p><%= button_to "Go to your Page", user_path(current_user.id), {method: :get} %></p>

  </div>
</div>
